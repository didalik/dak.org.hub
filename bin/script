#!/bin/bash

script_localhost () { # SSH to localhost {{{1
  cat $HOME/.ssh/.$HOSTNAME.env
}

validate_args () { # authorization {{{1
  err "+ $HOSTNAME $0 started on $(date) with $# args: $@" >&2
  local arg1=$1 kind=$2
  case $arg1 in
    test)
      script_localhost;;
    *) return 1 # TODO run script $arg1 with RPF
  esac
}

# }}}1

. build/util.sh
. $HOME/.ssh/.$HOSTNAME.env

validate_args $@ || exit
